<html>

<body>

    <section class="section">
        <div class="container">

            <div class="columns  is-multiline">

                <% var sumRec = 0 %>

                <div class="column ">
                    <div><strong>Kowloon</strong></div>
                    <br></br>

                    <% qpons.forEach( function(qpon) { %>

                    <% if (qpon.area=="Kowloon" && sumRec < 2 ) { %>

                    <% sumRec=sumRec+1 %>

                    <a href="http://localhost:1337/qpon/detail/<%=qpon.id %>">
                        <div class="card" style="margin-bottom: 1em;">
                            <div class="card-image">
                                <figure class="image is-square">
                                    <img style="object-fit:cover" src=<%=qpon.imageLink %> />
                                </figure>
                            </div>

                            <div class="card-content">

                                <section class="hero">
                                    <div class="hero-body">
                                        <div class="container">
                                            <h1 class="title">
                                                <%=qpon.restaurant%>
                                            </h1>
                                            <h2 class="subtitle">
                                                <%=qpon.tittle%>
                                            </h2>
                                            <h3 class="subtitle">
                                                Conis:<%=qpon.coins%>
                                            </h3>
                                        </div>
                                    </div>
                                </section>

                            </div>
                        </div>
                    </a>
